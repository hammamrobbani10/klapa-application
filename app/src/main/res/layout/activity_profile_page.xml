<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.ProfilePageActivity">

    <ImageButton
        android:id="@+id/backButtonProfile"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="30sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/imageViewProfile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="125dp"/>


    <ImageView
        android:id="@+id/transaksiViewProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="230dp"
        android:src="@drawable/ic_list"
        android:layout_marginStart="-290dp" />

    <TextView
        android:id="@+id/transaksiTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginStart="10dp"
        android:text="Daftar Transaksi"/>

    <ImageView
        android:id="@+id/ulasanViewProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/ic_star"
        android:layout_marginStart="-260dp"/>

    <TextView
        android:id="@+id/ulasanTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginStart="10dp"
        android:text="Ulasan"/>

    <ImageView
        android:id="@+id/whislistViewProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="370dp"
        android:src="@drawable/ic_whistlist"
        android:layout_marginStart="-260dp"/>

    <TextView
        android:id="@+id/whislistTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:layout_marginStart="10dp"
        android:text="Whistlist"/>

    <ImageView
        android:id="@+id/tokoViewProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="440dp"
        android:src="@drawable/ic_store"
        android:layout_marginStart="-260dp"/>

    <TextView
        android:id="@+id/tokoTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:layout_marginStart="10dp"
        android:text="Toko Yang Di Follow"/>

    <ImageView
        android:id="@+id/pesananViewProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="510dp"
        android:src="@drawable/baseline_assignment_late_24"
        android:layout_marginStart="-260dp"/>

    <TextView
        android:id="@+id/pesananTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="510dp"
        android:layout_marginStart="10dp"
        android:text="Pesanana Yang Di Komplain"/>

    <ImageView
        android:id="@+id/bantuanViewProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="580dp"
        android:src="@drawable/baseline_chat_24"
        android:layout_marginStart="-260dp"/>

    <TextView
        android:id="@+id/bantuanTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:layout_marginStart="10dp"
        android:text="Bantuan Kelapa Clare"/>






</LinearLayout>